@import "normalize.styl"
@import "fonts.styl"

//VARIABLES
gris_oscuro = #333
gris_claro = #818181
rojo = #BD255B
a
	text-decoration none
body
	font-size 16px
	font-family: 'Varela Round', sans-serif;

figure
	margin 0

img
	// las imagnenes dejan un espacion por debajo con esto se soluciona
	vertical-align top

.button-menu
	position absolute
	left .5em
	top 50%
	// el top 50% colocara el a  en el medio pero empezando desdel su pie
	// para centrarlo mejor le sacamos un margin de 10px 
	// para que suba a la mitad 
	margin-top -10px
	// le quitamos -10 masomenos el tamano de la letra principal
	color gris_oscuro
.container
	// COMO TIENE font-size 0 TAMBIEN TENEMOS QUE USAR REM
	padding 1.4rem
	font-size 0
	text-align center

.action
	color white
	margin-right .5em
	font-size: 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, .3)


.border-bottom
	border-bottom 1px solid gris_claro


.center-block
	margin 0 auto
.center-text
	text-align center

.name
	color gris_oscuro

.menu
	display none


.author
	color gris_claro

.header
	height 3.5em
	// a
	// 	display none
	.title
		font-size: 1.1em
		text-align center
		margin 0
		// LE DAMOS EL MISMO TAMANO DE SU CONTENEDOR PARA QUE SE CENTRE
		line-height: 3.5em

.relative
	position relative

.padding
	padding 1em

.padding-tb
	padding 1em 0

.progress
	margin 1em 0 
	position relative
	.min
	.max 
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		height: 5px
		background gris_claro
		width 75%
		// margin-top 10px
		border-radius 5px
		margin 0 auto

	.state
		height: 5px
		background rojo
		width 30%
		border-radius 5px
		position relative

	.circle
		background gris_oscuro
		width: 10px
		height 10px
		border-radius 5px
		position absolute
		right 0
		top -2px

.right-text
	text-align right	
.song
	// tambien puedo calcular 128 entre 16 para saber cuanto es en em
	// usamos rem para que no haga caso al container sino al padre anterior
	// ya que el container se ha quedado sin size o tamano
	width 8rem 
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em
 
















